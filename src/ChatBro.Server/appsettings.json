{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "ChatBro": "Debug",
      "Microsoft.AspNetCore": "Warning",
      "StackExchange.Redis": "Warning",
      "OpenAI": "Information"
    }
  },
  "AllowedHosts": "*",
  
  "Chat": {
    "AiModel": "o4-mini",
    "Context": {
      "Shared": "contexts/shared.md"
    },
    "Orchestrator": {
      "Name": "ChatBro Orchestrator",
      "Description": "Routes user questions to the most relevant ChatBro domain agent.",
      "Instructions": "contexts/orchestrator.md"
    },
    "Domains": {
      "Restaurants": {
        "Key": "restaurants",
        "ToolName": "restaurants_chat",
        "Description": "Specialist for lunch planning and restaurant insights.",
        "Instructions": "contexts/domains/restaurants.md"
      },
      "Documents": {
        "Key": "documents",
        "ToolName": "documents_chat",
        "Description": "Specialist for Paperless document lookup and summarization.",
        "Instructions": "contexts/domains/documents.md"
      }
    },
    "History": {
      "ReduceOnMessageCount": 10
    }
  },
  "Aspire": {
    "OpenAI": {
      "DisableTracing": false,
      "DisableMetrics": false,
      "EnableSensitiveTelemetryData": true,
      "ClientOptions": {
        "UserAgentApplicationId": "chatbro"
      }
    }
  },
  "Telegram": {
    "Token": ""
  }
}
